<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="1">ab-bonus-airberlin</id>
	<api flags="no_browser"/>
	<name>TopBonus AirBerlin</name>
	<description html="true"><![CDATA[
	<p>Shows your miles in AirBerlin topbonus bonus program https://topbonus.airberlin.com</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>library.js</js>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Award miles"/>
		<counter id="status_miles" name="Status miles for an upgrade" units="/{@status_miles_total}"/>
		<counter id="status_segments" name="Flight segments for an upgrade" units="/{@status_segments_total}"/>
		<counter id="fio" name="Name" type="text"/>
		<counter id="num" name="Card Number" type="text"/>
	</counters>
	<keywords></keywords>
	<type>bonus, air</type>
</provider>